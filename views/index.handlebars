<div class="jumbotron headers-div">
    <h1 id="main-header">Burgers</h1>
    <i class="fas fa-hamburger fa-7x"></i>
    <h2 id="sub-Header">Let's devour some burgers</h2>
</div>
<div class="container-fluid main-body">
    <main class="row">
        <div class="col-sm-6 eaten">
            <div>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burger-block eaten=true}}
                {{/unless}}
                {{/each}}
            </div>
        </div>

        <div class="col-sm-6 not-eaten">
            <div>
                {{#each burgers}}
                {{#if devoured}}
                {{> burger-block eaten=false}}
                {{/if}}
                {{/each}}
            </div>
        </div>
    </main>
</div>

<div class="form-div">
    <h1>Add a new burger</h1>
    <form class="create-form">

        <div class="form-group">
            <label for="ca">burger Name:</label>
            <input type="text" id="ca" name="name">
        </div>
        <button type="submit">Add burger</button>

    </form>
    <h7>Enter a burger name above and let's get started!</h7>
</div>